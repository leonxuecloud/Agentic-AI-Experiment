{
  "name": "oncall-support-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for oncall support with Jira integration, file operations, and command execution",
  "main": "dist/mcp-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp-server.js --transport=stdio",
    "start:http": "node dist/mcp-server.js --transport=http",
    "start:dual": "node dist/mcp-server.js --transport=dual",
    "dev": "tsx src/mcp-server.ts --transport=stdio",
    "dev:http": "tsx src/mcp-server.ts --transport=http",
    "dev:dual": "tsx src/mcp-server.ts --transport=dual",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:error-handling": "vitest src/__tests__/error-handling.test.ts",
    "test:startup": "vitest src/__tests__/server-startup.test.ts",
    "test:integration": "vitest src/__tests__/integration.test.ts --run",
    "test:comprehensive": "tsx test/test-runner.ts",
    "test:all": "npm run test:comprehensive && node test/jira-integration.test.mjs all",
    "test:structure": "node test/test-prototype.js",
    "test:jira": "node test/jira-integration.test.mjs all",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build"
    ,"inspect:mcp": "npx @modelcontextprotocol/inspector http://localhost:${MCP_PORT:-3001}/mcp"
  },
  "keywords": [
    "mcp",
    "oncall",
    "jira",
    "support",
    "automation"
  ],
  "author": "Oncall Support Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "sqlite3": "^5.1.7",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
