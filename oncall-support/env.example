# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# OAuth 2.0 Configuration - Microsoft Azure AD
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# OAuth 2.0 Configuration - Google (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth 2.0 Configuration - GitHub (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-here-change-this-in-production
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3100

# Jira Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# Jira Webhook Secret (generate with: openssl rand -base64 32)
JIRA_WEBHOOK_SECRET=your-webhook-secret-here

# Optional: Custom Jira fields to include in ticket analysis
JIRA_CUSTOM_FIELDS=priority,components,labels

# Security: Allowed command patterns (regex)
ALLOWED_COMMANDS=^(npm|yarn|git|ls|cat|grep|find|mkdir|rmdir|cp|mv|chmod|chown).*$

# File operations: Maximum file size for downloads (in bytes)
MAX_DOWNLOAD_SIZE=104857600

# Local storage directory for downloaded files
LOCAL_STORAGE_DIR=./oncall-files

# Storage directory for sessions and audit logs
STORAGE_DIR=./.mcp-storage

